@model AshokPMS.web.Models.Category

 @if (Model.Id > 0)
{
    <h3>Edit Category Info</h3>
}
else
{
    <h3>Create Category Info</h3>
} 

<form asp-action="AddEdit">
    <div class=" row col-12 col-md-12">
    <div class="form-group col-8 pt-4">
        <label asp-for="CategoryName" class="control-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <div class="form-group col-8 pt-4">
        <label asp-for="CategoryDescription" class="control-label"></label>
        <input asp-for="CategoryDescription" class="form-control" />
        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
    </div>



    <div class="form-group col-8 pt-4">
        <div class="form-check">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="IsActive">Active:@(Model.IsActive ? "TRUE" : "FALSE") </label>
        </div>
    </div>

    <div class="form-group row col-8 pt-2">
        <div class="col-6">
            <button type="submit" class="btn btn-primary float-left mt-2">@((Model.Id > 0) ? "Update" : "Create") Create</button>
            
        </div>
        <div class="col-6">
                <a href="@Url.Action("Index", "Category")" class="btn btn-outline-primary float-end mt-2"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
                
        </div>
    </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 