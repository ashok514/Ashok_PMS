@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<AshokPMS.web.Models.Product>

<div class="row pb-3 ">
    @foreach (var items in Model)
    {

        <div class="col-lg-3 col-sm-6  m-2 ">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded" style="width: 18rem;">
                        <img class="card-img-top" src="@items.ImageUrl" alt="Card image cap" style="height: 180px;">
                        <div class="card-body pb-0">
                            <h5 class="card-title">@items.ProductName</h5>
                            <h5 class="card-title">@items.Manufacturer</h5>
                            <p class="card-text">@items.ProductDescription</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"> <b>Price :</b> @items.Price</li>
                            <li class="list-group-item">Discount : 10% on all</li>

                        </ul>
                        <div class="card-body">
                            <a class="btn btn-outline-primary col-12" asp-action="Details" asp-route-ProductId="@items.Id"><i class="bi bi-info-circle"></i> Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>